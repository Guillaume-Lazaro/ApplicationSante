<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.codevallee.formation.applicationsante.fragment.UtilisateurFragment">

    <TextView
        android:id="@+id/tv_no_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Aucun utilisateur"
        android:textSize="40sp"
        android:visibility="invisible"/>

    <android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_nom_prenom_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jean Patrick"
            android:textSize="30sp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_sexe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Homme"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_metier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Infirmier"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cardiologie"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="email"
            android:text="jp@hmail.com"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:text="0102030405"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pleins de choses"
            android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/button_modifier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/modifier"
                android:textSize="24sp"/>

            <Button
                android:id="@+id/button_supprimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/supprimer"
                android:textSize="24sp"/>
        </LinearLayout>


    </android.support.v7.widget.LinearLayoutCompat>

</FrameLayout>
